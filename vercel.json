{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/daily-picks/publish",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/collect-odds-data",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/daily-picks/grade-bets",
      "schedule": "0 3,6 * * *"
    },
    {
      "path": "/api/clv/collect-closing-lines",
      "schedule": "*/30 10-23 * * *"
    }
  ],
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    },
    "pages/api/daily-picks/publish.js": {
      "maxDuration": 300
    },
    "pages/api/daily-picks/grade-bets.js": {
      "maxDuration": 300
    },
    "pages/api/collect-odds-data.js": {
      "maxDuration": 60
    },
    "pages/api/clv/collect-closing-lines.js": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}